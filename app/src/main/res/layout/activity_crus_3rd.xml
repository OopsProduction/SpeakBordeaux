                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_3rd_lasirenedegiscours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/third_la_sirene_de_giscours" />

            <TextView
                android:id="@+id/txt_3rd_lesfiefsdelagrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nLes Fiefs de Lagrange\n[Lay Fat The La Grange]"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_3rd_lesfiefsdelagrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/third_les_fiefs_de_lagrange" />

            <TextView
                android:id="@+id/txt_3rd_marquisdecalon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nMarquis de Calon\n[Mar Key The Car Long]"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_3rd_marquisdecalon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/third_marquis_de_calon" />

            <TextView
                android:id="@+id/txt_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
